{% extends 'base_content.html.twig' %}

{% block title %}Статья: {{ article.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/detail.css') }}">
{% endblock %}

{% block content_row_class %} {{ parent()}} no-gutters featured-border {% endblock %}
{% block content_col_class %} article-detail {% endblock %}

{% block content %}
    <div class="col-sm-12 p-2">
        <div class="media d-flex align-content-center">
            <img class="article-detail-image align-self-start mr-3 rounded" src="{{ asset(article.image) }}">
            <div class="media-body d-inline-block align-self-center">
                <h1 class="mb-2">{{ article.title|capitalize }}</h1>
                <div class="d-flex mb-2">
                    <div class="text-muted align-self-center">
                        <img class="article-author-img rounded-circle mr-2" src="https://robohash.org/флекс_абсолютович.jpg?set=set3">
                        Флекс Абсолютович
                    </div>
                    <div class="text-muted align-self-center ml-4"><i class="fas fa-clock size-is-"></i> 1 месяц назад</div>
                </div>
                <div class="mb-2 d-flex">
                    <span class="badge badge-pill badge-secondary mr-2">Балбес</span>
                    <span class="badge badge-pill badge-secondary mr-2">Криворучка</span>
                    <span class="badge badge-pill badge-secondary mr-2">Рукопоп</span>
                </div>
                <div class="mb-2">
                    <div class="text-muted align-self-center article-detail-arrows">
                        120
                        <button class="btn btn-success ml-3"><i class="fas fa-arrow-up"></i></button>
                        <button class="btn btn-danger"><i class="fas fa-arrow-down"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-12 mt-2 mb-4">
        {{ article.articleContent|cached_markdown }}
    </div>


    <div class="col-sm-12 mb-4">
        <h3><i class="pr-3 far fa-comment text-secondary"></i>{{ comments|length }} Комментария</h3>
        <hr>

        <div class="row mb-4">
            <div class="col-sm-12">
                <div class="comment-container align-self-start col-sm-6">
                    <div class="form-group">
                        <textarea class="form-control" rows="2"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Комментировать</button>
                </div>
            </div>
        </div>
        {% for comment in comments %}
            <div class="row mt-2">
                <div class="col-sm-12">
                    <div class="media">
                        <img class="align-self-start comment-img rounded-circle" src="{{ asset('images/profile.png') }}">
                        <div class="media-body align-self-start col-sm-6">
                            <b>Вью j эс</b>
                            <small>11 дней назад</small>
                            <br>
                            <span class="comment"> {{ comment }} </span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% extends 'base_content.html.twig' %}

{% block title %}Управление тегами{% endblock %}

{% block content %}
    <h1>Управление тегами({{ pagination.totalItemCount }})</h1>

    <form>
        <div class="input-group mb-3">
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Найти..."
                   value="{{ app.request.query.get('q')}}"
            >
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
            </div>
        </div>

        <div class="input-group mb-3">
            <div class="form-check">
                <input type="checkbox"
                       name="showDeleted"
                       class="form-check-input"
                        {% if app.request.query.has('showDeleted') %} checked {% endif %}
                >
                <label class="form-check-label"> Show deleted tags </label>
            </div>
        </div>
    </form>


    <table class="table table-striped">
        <thead>
        <tr>
            <th>Статьи</th>
            <th>Тег</th>
            <th>Дата</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in pagination %}
            <tr>
                <td>
                    {% for article in tag.articles %}
                    <a href=" {{ path('app_detail', { slug: article.slug }) }} ">
                        {% if loop.last %}
                            {{ article.title }}
                        {% else %}
                            {{ article.title }} |
                        {% endif %}
                    </a>
                    {% endfor %}
                </td>
                <td style="width: 20%;">{{ tag.name|u.truncate(40, '...') }}</td>
                <td>{{ tag.createdAt|ago }} {% if tag.deletedAt %} DELETED {% endif %} </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Нет тегов</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
{% endblock %}